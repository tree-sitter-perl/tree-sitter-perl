================================================================================
AUTOQUOTED => EXPR
================================================================================
hello  # tree-sitter is magical!
  => 'world';
shift => 'up';
plain::bareword => 'here';
things
# this does not make all the tings explode
  =>;
--------------------------------------------------------------------------------

(source_file
  (expression_statement
    (list_expression
      (autoquoted_bareword)
      (comment)
      (string_literal
        (string_content))))
  (expression_statement
    (list_expression
      (autoquoted_bareword)
      (string_literal
        (string_content))))
  (expression_statement
    (list_expression
      (bareword)
      (string_literal
        (string_content))))
  (expression_statement
    (list_expression
      (autoquoted_bareword)
      (comment))))

