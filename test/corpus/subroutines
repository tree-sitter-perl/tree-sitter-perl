================================================================================
Small declaration
================================================================================
sub foo
{
  123;
}
--------------------------------------------------------------------------------

(source_file
  (subroutine_declaration_statement
    name: (bareword)
    body: (block
      (expression_statement
        (number)))))

================================================================================
Small anonymous
================================================================================
sub { $x };
--------------------------------------------------------------------------------

(source_file
  (expression_statement
    (anonymous_subroutine_expression
      (block
        (expression_statement
          (scalar
            (varname)))))))

================================================================================
Attributes on named subs
================================================================================
sub abc :lvalue { }
sub def :lvalue const { }
sub ghi :lvalue :const { }
sub jkl : { }
--------------------------------------------------------------------------------

(source_file
  (subroutine_declaration_statement
    (bareword)
    (attrlist
      (attribute
        (attribute_name)))
    (block))
  (subroutine_declaration_statement
    (bareword)
    (attrlist
      (attribute
        (attribute_name))
      (attribute
        (attribute_name)))
    (block))
  (subroutine_declaration_statement
    (bareword)
    (attrlist
      (attribute
        (attribute_name))
      (attribute
        (attribute_name)))
    (block))
  (subroutine_declaration_statement
    (bareword)
    (block)))

