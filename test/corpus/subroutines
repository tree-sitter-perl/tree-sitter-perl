  (method_declaration_statement
    name: (bareword)
    body: (block
      (expression_statement
        (number))))
  (expression_statement
    (anonymous_method_expression
      body: (block
        (expression_statement
          (interpolated_string_literal)))))
  (method_declaration_statement
    name: (bareword)
    attributes: (attrlist
      (attribute
        name: (attribute_name)))
    body: (block)))
