            (unary_expression
              (interpolated_string_literal
                (string_content
                  (escape_sequence)
                  (scalar
                    (varname)))))
            (number))))
      (array
        (varname))))
  (comment)
  (expression_statement
    (map_grep_expression
      (block
        (expression_statement
          (list_expression
            (interpolated_string_literal
              (string_content
                (escape_sequence)
                (scalar
                  (varname))))
            (number))))
      (array
        (varname))))
  (comment)
  (expression_statement
    (map_grep_expression
      (block
        (expression_statement
          (list_expression
            (interpolated_string_literal
              (string_content
                (escape_sequence)
                (scalar
                  (varname))))
            (number))))
