      list: (number)
      list: (number)))
  (expression_statement
    (map_grep_expression
      callback: (block
        (expression_statement
          (list_expression
            (func1op_call_expression
              (scalar
                (varname)))
            (number))))
      list: (list_expression
        (number)
        (number)
